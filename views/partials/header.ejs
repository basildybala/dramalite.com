<body>
  <!-- Google Tag Manager (noscript) ---->
  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-5VRBV3N" height="0" width="0"
      style="display:none;visibility:hidden"></iframe></noscript>
  <!-- End Google Tag Manager (noscript) -->


  <div class="web-nav-bar">
    <a href="/" class="logo">
      <img data-src="/images/logo/dramalitelogo.png" alt="Dramalite" class="lazy-photo" srcset="">
      <h2>Dramalite</h2>
      <span>.com</span>
    </a>
    <% if(user){%>
      <div class="action">
        <div class="profile" onclick="menuToggle();">
          <img data-src="<%= user.profilePic %>" class="lazy-photo" />
        </div>
        <div class="menu">
          <h3>
            <%= user.name %><br />
          </h3>
          <ul>
            <li>
              <i class="fa fa-user"></i><a href="/user/my-profile">My profile</a>
            </li>
            <li>
              <i class="fa fa-user-pen"></i><a href="/user/edit-profile">Edit profile</a>
            </li>
            <li>
              <i class="fa fa-circle-info"></i><a href="#">Help</a>
            </li>
            <li>
              <i class="fa fa-right-from-bracket"></i><a href="/user/logout">Logout</a>
            </li>
          </ul>
        </div>
      </div>
      <%}else{%>
        <div class="signup">
          <!-- <a href="#"><i class="fa fa-solid fa-user-plus"></i></a> -->
          <a href="/auth/login">Log in</a>
          <a href="/auth/signup">Signup</a>

        </div>
        <% }%>

  </div>
  <div class="search-sec">
    <div class="search-bar">
      <form action="/search-movie" method="post">
        <input class="form-control" type="text" name="search" placeholder="Type movie name" required>
        <button class="search-btn" type="submit">Search</button>
      </form>
    </div>
  </div>


  <!--------------------------------Movies Categories Swipe---------------------->
  <div class="other-sec">
    <div class="nav-bar-sticky ">
      <ul>
        <span>Movies</span>
        <div class="nav-swiper">
          <li><a href="/" title="Home Page">Home</a></li>
          <li><a href="/malayalam-movies" title="Malayalam Movies Page">Malayalam</a></li>
          <li><a href="/tamil-movies" title="Tamil Movies Page">Tamil</a></li>
          <li><a href="/hindi-movies" title="Hindi Movies Page">Hindi</a></li>
          <li><a href="/telugu-movies" title="Telugu Movies Page">Telugu</a></li>
          <li><a href="/english-movies" title="Hollywood Movies Page">Hollywood</a></li>
          <li><a href="/kannada-movies" title="Other Movies Page">Kannada</a></li>
        </div>
      </ul>
    </div>
  </div>


  <script>
    function menuToggle() {
      const toggleMenu = document.querySelector(".menu");
      toggleMenu.classList.toggle("active");
    }
  </script>

